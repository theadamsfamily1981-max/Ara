{
  "dashboard": {
    "title": "TF-A-N System Monitor",
    "tags": ["tfan", "ml", "production"],
    "timezone": "utc",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "TTW-Sentry Latency",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "tfan_ttw_p50_latency_ms",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "tfan_ttw_p95_latency_ms",
            "legendFormat": "p95 (gate: <5ms)",
            "refId": "B"
          },
          {
            "expr": "tfan_ttw_p99_latency_ms",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "legend": {"displayMode": "table", "calcs": ["last", "max"]},
          "tooltip": {"mode": "multi"}
        }
      },
      {
        "id": 2,
        "title": "TTW Coverage",
        "type": "gauge",
        "gridPos": {"x": 8, "y": 0, "w": 4, "h": 8},
        "targets": [
          {
            "expr": "tfan_ttw_coverage",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.9, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "PGU Latency",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "tfan_pgu_p50_latency_ms",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "tfan_pgu_p95_latency_ms",
            "legendFormat": "p95 (gate: ≤200ms)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 200, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "PGU Cache Hit Rate",
        "type": "gauge",
        "gridPos": {"x": 20, "y": 0, "w": 4, "h": 8},
        "targets": [
          {
            "expr": "tfan_pgu_cache_hit_rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.5, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "EPR & EPR-CV",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "tfan_epr",
            "legendFormat": "EPR",
            "refId": "A"
          },
          {
            "expr": "tfan_epr_cv",
            "legendFormat": "EPR-CV (gate: ≤0.15)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.15, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Learning Rate & Temperature",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "tfan_lr",
            "legendFormat": "Learning Rate",
            "refId": "A"
          },
          {
            "expr": "tfan_temperature",
            "legendFormat": "Temperature",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {"axisPlacement": "auto"}
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Learning Rate"},
              "properties": [
                {"id": "custom.axisLabel", "value": "LR"},
                {"id": "custom.axisPlacement", "value": "left"}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Temperature"},
              "properties": [
                {"id": "custom.axisLabel", "value": "T"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            }
          ]
        }
      },
      {
        "id": 7,
        "title": "Topology Metrics",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "tfan_topology_wasserstein_gap",
            "legendFormat": "Wasserstein (gate: ≤0.02)",
            "refId": "A"
          },
          {
            "expr": "tfan_topology_cosine_similarity",
            "legendFormat": "Cosine (gate: ≥0.90)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {"axisPlacement": "auto"}
          }
        }
      },
      {
        "id": 8,
        "title": "Sparse Attention Metrics",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "tfan_ssa_speedup",
            "legendFormat": "Speedup (gate: ≥3×)",
            "refId": "A"
          },
          {
            "expr": "tfan_ssa_sparsity",
            "legendFormat": "Sparsity",
            "refId": "B"
          }
        ]
      },
      {
        "id": 9,
        "title": "Emotion State",
        "type": "graph",
        "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "tfan_emotion_valence",
            "legendFormat": "Valence",
            "refId": "A"
          },
          {
            "expr": "tfan_emotion_arousal",
            "legendFormat": "Arousal",
            "refId": "B"
          },
          {
            "expr": "tfan_emotion_confidence",
            "legendFormat": "Confidence",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": -1,
            "max": 1
          }
        }
      },
      {
        "id": 10,
        "title": "GPU Memory",
        "type": "graph",
        "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "tfan_gpu_memory_allocated_gb",
            "legendFormat": "Allocated",
            "refId": "A"
          },
          {
            "expr": "tfan_gpu_memory_reserved_gb",
            "legendFormat": "Reserved",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "gbytes"
          }
        }
      },
      {
        "id": 11,
        "title": "Training Loss",
        "type": "graph",
        "gridPos": {"x": 0, "y": 32, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "tfan_loss",
            "legendFormat": "Loss",
            "refId": "A"
          }
        ]
      }
    ],
    "templating": {
      "list": []
    },
    "annotations": {
      "list": [
        {
          "name": "Gate Violations",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\"TFANGate.*\"}",
          "iconColor": "red"
        }
      ]
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
